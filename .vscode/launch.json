{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch (FinabitAPI)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [ "run", "--project", "FinabitAPI/FinabitAPI.csproj" ],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5200;https://localhost:7200"
      }
    }
  ]
}
